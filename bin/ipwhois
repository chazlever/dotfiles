#!/bin/bash

_USAGE="usage: $(basename $0) [-h] {DOMAIN, IP}"

_DOMAIN=0
while getopts ":h" opt; do
  case $opt in
    h)
      echo "${_USAGE}"
      exit
      ;;
    \?)
      echo "$(basename $0): illegal option -- $OPTARG"
      echo "${_USAGE}"
      exit 1
      ;;
  esac
done

shift $((OPTIND-1))

if [ -z "$1" ]; then
  echo "${_USAGE}"
  exit 1
fi

if [ -z "$(echo $1 | grep -Eo '^[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$')" ]; then
  _HOST="$(dig @8.8.8.8 $1 A +noall +answer | tail -n1 | awk '{ print $5 }')"
else
  _HOST="$1"
fi

if [ -z "${_HOST}" ]; then
  echo "error: could not resolve domain: $1" 1>&2
  exit 1
else
  whois -h whois.cymru.com " -v ${_HOST}"
fi
